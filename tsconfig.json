{
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "esm": true,
    "compilerOptions": {
      "module": "ESNext"
    }
  },
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "target": "ESNext",                
    "module": "ESNext",
    "moduleResolution": "Node",                      
    "esModuleInterop": true,                    
    "strict": true,                 
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false
  }
}
